.mainContainer {
    border: 1px solid black;
    min-width: 275px;
    max-width: 275px;
    margin-top: 40px;
    padding: 15px;
    cursor: pointer;
}

.flexContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    margin: 25px auto;
    border-top: 1px dotted black;
    border-bottom: 1px dotted black;
    padding: 10px;
}

.dayText {
    font-size: 40px;
    text-align: center;
    margin-bottom: 25px;
}

.productText {
    flex: 1;
    text-align: center;
}

.moneyText {
    flex: 1;
    text-align: center;
}

.totalText {
    font-size: 40px;
    text-align: center;
    margin-bottom: 20px;
    border-top: 1px solid black;
    padding-top: 20px;
}
